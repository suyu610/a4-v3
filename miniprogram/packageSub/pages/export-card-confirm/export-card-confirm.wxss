/* pages/export-confirm/export-confirm.wxss */
.container {
  background-image: linear-gradient(#dde4f3 0%, rgba(253, 253, 253, 0) 100%);
  height: 100vh;
  width: 100vw;
  overflow: hidden;
  position: absolute;
  height: 100%;
}

.preview-pdf {
  width: 340px;
  height: 480.86px;
  margin: 22px auto;
  background: #ffffff;
  border-radius: 12px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.preview-pdf .image {
  width: 100%;
  border-radius: 12px;
  height: 100%;
}

.btn-container {
  display: flex;
  text-align: center;
  justify-content: center;
  position: absolute;
  bottom: 40px;
  width: 100vw;
  margin: 0 auto;
}
