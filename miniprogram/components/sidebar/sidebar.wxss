/* components/sidebar/sidebar.wxss */
.container {
  width: 100vw;
  box-sizing: border-box;
  height: 100vh;
  overflow: hidden;
}
.top-bg {
  width: 100vw;
  position: absolute;
  z-index: -1;
}
.top {
  padding: 0px 23px;
}

.top .header {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
}

.top .header .title {
  font-weight: bold;
}
.top .info {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-top: 36rpx;
}

.top .info .userinfo {
  display: flex;
  align-items: center;
}

.top .info .userinfo .not-login {
  padding-left: 20px;
  font-weight: bold;
}

.top .info .userinfo .nickname {
  padding-left: 12px;
  font-size: 18px;
  line-height: 24px;
  color: #1d2129;
}

.top .info .userinfo .avatar {
  width: 52px;
  height: 52px;
  border-radius: 50%;
}

.top .info .userinfo .medal {
  height: 32rpx;
  width: 32rpx;
  position: relative;
  right: 15px;
  top: 18px;
}

.top .timeinfo {
  display: flex;
  justify-content: space-around;
  padding-top: 22px;
  text-align: center;
  align-items: center;
}

.divider {
  height: 15px;
  width: 1px;
  background-color: #c9cdd4;
}

.top .timeinfo .time .desc {
  font-size: 11px;
  text-align: center;
  color: #9fa7b5;
}

.top .timeinfo .time .num {
  font-weight: bold;
  font-size: 20px;
}
.top .timeinfo .time .day {
  font-size: 12px;
}

.setting-icon .icon {
  width: 20px;
  height: 20px;
}

.closeIcon {
  width: 24rpx;
  height: 24rpx;
}

.bottom {
  border-radius: 14px;
  margin-top: 20px;
  width: 100vw;
  min-height: 576px;
  height: 800px;
  background-color: #fff;
}
