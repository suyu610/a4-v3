/* pages/settings/settings.wxss */
@import "../../style/font.wxss";

.settings-header {
  padding: 15px 0 15px 20px;
}

.settings-header-text {
  color: var(--black);
  font-size: var(--header-1);
  font-family: var(--poppins-title);
}

.collapse-item-text {
  color: var(--black);
  font-size: var(--header-2);
  font-family: var(--simhei);
  font-weight: var(--light);
}

.tabBar-shadow {
  width: 100%;
  height: 52px;
  box-shadow: 0px -1px 1px rgba(0, 0, 0, 0.05);
  position: fixed;
  bottom: 0;
  left: 0;
}

.group {
  background-color: rgba(255, 255, 255, 1);
  /* border: 1px solid rgba(153, 153, 153, 0.1); */
  border-radius: 4px;
}

.cell-title {
  /* color: rgba(29, 29, 31, 1); */
  font-size: 13px;
}

.cell-title-grey {
  color: var(--deepGrey);
}

.footer {
  width: auto;
  padding: 30px 30px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.footer-left {
  width: 104px;
  height: 40px;
  border: 1px solid var(--primary);
  border-radius: 10px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.footer-left-text {
  color: var(--primary);
  font-size: var(--body);
  font-family: var(--simhei);
  font-weight: var(--normal);
}

.footer-right {
  width: 104px;
  height: 40px;
  background-color: var(--primary);
  border-radius: 10px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.footer-right-text {
  color: var(--white);
  font-size: var(--body);
  font-family: var(--simhei);
  font-weight: var(--normal);
}

.contact-button {
  display: inline-block;
  position: absolute;
  width: 100%;
  background: salmon;
  opacity: 0;
  left: 0;
}
