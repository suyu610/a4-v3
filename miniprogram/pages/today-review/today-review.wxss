/* pages/new-word/index.wxss */
.container {
  background-image: linear-gradient(#dde4f3 0%, rgba(253, 253, 253, 0) 100%);
  height: 100vh;
  width: 100vw;
  overflow: hidden;
  position: absolute;
  height: 100%;
}
.coin {
  animation: rotate 9s linear infinite;
}

@keyframes rotate {
  0% {
    transform: rotateY(0deg);
  }
  100% {
    transform: rotateY(360deg);
  }
}
@media (prefers-color-scheme: dark) {
  .container {
    background-image: linear-gradient(#000000 0%, rgba(253, 253, 253, 0) 100%);
  }
}
.card-swiper {
  height: 98vh;
  width: 100vw;
  display: flex;
  align-items: center;
  justify-content: center;
}

.swiper-item {
  display: flex;
  justify-content: center;
  align-items: center;
  transition: all 0.3s ease-in 0s;
  width: 95vw;
  box-sizing: border-box;
  padding-left: 5vw !important;
  padding-right: 5vw !important;
}

.movable-btn {
  z-index: 9;
  bottom: 0;
  position: fixed;
}

.add-btn-wrapper {
  width: 100%;
  text-align: center;
}
.toggle-btn {
  margin: 0 auto;
  display: flex;
  padding: 12px 0px 28px 0px;
  width: 112.32px;
  height: 28px;
}
