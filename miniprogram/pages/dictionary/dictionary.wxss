/* pages/settings/settings.wxss */
@import "../../style/font.wxss";
@import "../../app-wxa-auto-dark.wxss";

@media (prefers-color-scheme: dark) {
  page {
    background: linear-gradient(0deg, #000000, #0a2967), #fdfdfd!important;
    --tabs-nav-background-color: linear-gradient(0deg, #f5f6f8, #f5f6f8), #fdfdfd;
  }
}
page {
  background: linear-gradient(0deg, #f5f6f8, #f5f6f8), #fdfdfd;
  --tabs-nav-background-color: linear-gradient(0deg, #f5f6f8, #f5f6f8), #fdfdfd;
  --tab-text-color: #c9cdd4;
  --font-weight-bold: 600;
  --tabs-bottom-bar-height: 4px;
  --tabs-bottom-bar-color: #3843fd;
}
.reset-footer {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  transition: 0.3s;
  bottom: 20px;
}

.footer-right {
  width: 104px;
  height: 40px;
  background-color: var(--primary);
  border-radius: 10px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.van-tab--active .van-ellipsis {
  transform: scale(1.2);
  transition: 0.2s;
}

.tab-container {
  width: 100vw;
}

.custom-icon {
  position: absolute;
  bottom: 10px;
  right: 10px;
  height: 28px;
  width: 28px;
  background: #4a51fb;
  padding: 15px;
  border-radius: 40px;
}
