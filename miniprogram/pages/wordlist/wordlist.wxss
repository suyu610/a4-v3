.btn-container {
  width: 100%;
  display: flex;
  bottom: 100rpx;
  left: 0;
  right: 0;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  position: fixed;
}

.field-popup-container {
  position: relative;
  padding: 10px;
  height: 100%;
  box-sizing: border-box;
}
.field-popup-container .btn {
    /* padding-top: 10px; */
    position: absolute;
    text-align: center;
    width: 100%;
    text-align: center;
    bottom: 38px;
    left: 0px;
    display: flex;
    justify-content: center;
}

.field-popup-container .title {
  font-weight: bold;
  padding: 10px 16px;
}
