/* pages/wordlist/wordlist.wxss */
.container {
  padding: 6px;

  box-sizing: border-box;
  /* 
  flex-direction: column;
  justify-content: space-between;
  align-items: center; */
  position: relative;
}

.head-progress {
  color: var(--deepGrey);
  font-size: var(--english);
  font-family: var(--simhei);
  font-weight: var(--light);
  align-self: flex-end;
}
.btn-container {
  width: 100%;
  display: flex;
  bottom: 100px;
  left: 0;
  right: 0;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  position: fixed;
}

.practice-btn {
  width: 44px;
  height: 44px;
  border-radius: 50%;
  box-shadow: 0px 3px 7px rgba(83, 141, 255, 0.3);
  position: fixed;
  right: 50px;
  bottom: 75px;
  transition: 0.2s;
  background-color: var(--primary);
  display: flex;
  justify-content: center;
  text-align: center;
  flex-direction: column;
  align-items: center;
}

.export-btn {
  right: 113px;
}

.right-checked-img {
  padding: 5px;
  width: 18px;
  height: 18px;
  display: flex;
}

.left-checked-img {
  padding: 5px;
  padding-right: 10px;
  width: 14px;
  height: 14px;
  display: flex;
}

.practice-img {
  width: 22px;
  height: 22px;
}
.checkbox-icon {
  width: 16px;
  height: 16px;
}
.add-Btn {
  box-shadow: 0px 2px 6px rgba(153, 153, 153, 0.2);
  transition: 0.2s;
  width: 103px;
  height: 36px;
  padding: 0 28px;
  border: 0.7px solid rgba(28, 37, 42, 1);
  border-radius: 100px;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  justify-content: center; 
  align-items: center;
  color: var(--white);
  background-color: var(--primary);
}



.add-btn-text {
  /* color: var(--black); */ 
  font-size: var(--body);
  font-family: var(--simhei);
  font-weight: var(--normal);
  line-height: 18px;
}
.dictPopup {
  overflow: hidden !important;
  overflow-y: hidden !important;
  -webkit-overflow-scrolling: auto !important;
  background-color: transparent !important;
}

.container-head {
  padding: 15px 20px 12px 15px;
  padding-bottom: 15px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  background-color: var(--white);
  /* width: 100%; */
}

.container-up {
  left: 24px;
  right: 24px;
  top: 110px;
  position: absolute;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.container-down {
  bottom: 60px;
  left: 24px;
  right: 24px;
  position: absolute;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.favor-img {
  width: 16px;
  height: 16px;
  padding-right: 8px;
}
.head-right {
  display: flex;
  height: 24px;
  line-height: 24px;
}

.setting-img {
  padding-top: 3px;
  width: 20px;
  height: 20px;
  padding-right: 8px;
  margin-bottom: -5px;
}

.cell-title-class {
  font-weight: var(--bold);
}

.cell-value-class {
  flex: none !important;
}

.progress-header-text {
  color: var(--black);
  font-size: var(--header-1);
  font-family: var(--poppins-title);
}

.progress-header-text-all {
  opacity: 0.7;
  font-size: var(--overline);
  font-family: var(--poppins-title);
}

.select-all-btn {
  padding-left: 5px;
  padding-right: 5px;
  width: 61px;
  height: 22px;
  line-height: 22px;

  /* border: 0.5px solid rgba(28, 0, 219, 0.7); */
  border: 0.5px solid rgba(29, 29, 31, 0.7);
  border-radius: 20px;
  display: flex;
  justify-content: center;
}

.select-all-btn-img {
  width: 12px;
  height: 12px;
  padding-top: 5px;
  padding-right: 5px;
}
