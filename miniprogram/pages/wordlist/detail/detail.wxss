/* pages/wordlist/wordlist.wxss */
page {
  --cell-background-color: transparent;
}
.container {
  padding: 6px;
  padding-top: 0;

  box-sizing: border-box;
  /* 
  flex-direction: column;
  justify-content: space-between;
  align-items: center; */
  position: relative;
}

.head-progress {
  font-size: 18px;
  line-height: 24px;
  text-align: center;
  color: #181a1d;
}

.blue {
  color: #4c34f0;
}
.btn-container {
  transform: translateX(100%);
  bottom: 66px;
  position: fixed;
}

.practice-btn {
  width: 44px;
  height: 44px;
  border-radius: 50%;
  box-shadow: 0px 3px 7px rgba(83, 141, 255, 0.3);
  position: fixed;
  right: 50px;
  bottom: 75px;
  transition: 0.2s;
  background-color: var(--primary);
  display: flex;
  justify-content: center;
  text-align: center;
  flex-direction: column;
  align-items: center;
}

.export-btn {
  right: 113px;
}

.right-checked-img {
  padding: 5px;
  width: 18px;
  height: 18px;
  display: flex;
}

.left-checked-img {
  padding: 5px;
  padding-right: 10px;
  width: 14px;
  height: 14px;
  display: flex;
}

.practice-img {
  width: 22px;
  height: 22px;
}
.checkbox-icon {
  width: 16px;
  height: 16px;
}
.add-btn {
  background: linear-gradient(133.36deg, #8472ff -16.27%, #1c00db 136.02%);
  box-shadow: 0px 8px 24px rgba(67, 43, 233, 0.16);
  border-radius: 100px;
  width: 125px;
  height: 40px;
  text-align: center;
  line-height: 40px;
  color: white;
  font-size: 16px;
}

.dictPopup {
  overflow: hidden !important;
  overflow-y: hidden !important;
  -webkit-overflow-scrolling: auto !important;
  background-color: transparent !important;
}

.container-head {
  padding: 15px 14px 12px 15px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  background-color: #fcfcfc;
}

.container-up {
  left: 24px;
  right: 24px;
  top: 110px;
  position: absolute;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.container-down {
  bottom: 60px;
  left: 24px;
  right: 24px;
  position: absolute;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.favor-img {
  width: 16px;
  height: 16px;
  padding-right: 8px;
}
.head-right {
  display: flex;
  height: 24px;
  line-height: 24px;
}

.setting-img {
  padding-top: 3px;
  width: 20px;
  height: 20px;
  padding-right: 8px;
  margin-bottom: -5px;
}

.cell-title-class {
  font-weight: var(--bold);
}

.cell-value-class {
  flex: none !important;
}

.progress-header-text {
  /* color: var(--black); */
  font-size: var(--header-1);
  font-family: var(--poppins-title);
}

.progress-header-text-all {
  font-size: 12px;
  font-family: var(--poppins-title);
  padding-left: 4px;
  color: #4e5969;
}
.select-all-btn:first-child{
  margin-right: 4px;
}
.select-all-btn {
  min-width: 58px;
  align-items: center;
  height: 24px;
  line-height: 24px;
  border: 0.5px solid #f2f3f5;
  /* border: 0.5px solid #000; */
  border-radius: 20px;
  display: flex;
  justify-content: center;
  padding: 0px 6px;
  background: white;
}

.select-all-btn-active {
  color: white !important;
  background: rgba(76, 52, 240, 0.48);
}

.select-all-btn-img {
  width: 12px;
  height: 12px;
  padding-right: 2px;
}
