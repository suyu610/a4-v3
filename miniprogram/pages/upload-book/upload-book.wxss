/* pages/upload-book/upload-book.wxss */
page {
  background: #e8edf6;
}
.desc-container {
  width: 85vw;
  margin: 10px auto;
  padding: 20px 14px;
  background-color: #fff;
  border-radius: 12px;
  color: rgba(29, 29, 31, 1);
}
.container {
  height: 100vh;
  width: 100vw;
  overflow: hidden;
}
.footer-right {
  width: 104px;
  height: 40px;
  background-color: var(--primary);
  border-radius: 10px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.desc-container .title {
  font-size: 16px;
  font-weight: bold;
  font-weight: bold;
  justify-content: space-between;
  display: flex;
  align-items: center;
}

.desc-container .title .right {
  border: 1px solid #c9cdd4;
  box-sizing: border-box;
  border-radius: 4px;
  font-style: normal;
  font-weight: 400;
  font-size: 10px;
  height: 18px;
  line-height: 18px;
  padding: 0 8px;
  color: #86909c;
}

.desc-container .body {
  padding: 15px 0;
  font-size: 13px;
}

.desc-container .images {
  display: flex;
  text-align: center;
  font-size: 12px;
  color: #86909c;
  justify-content: space-around;
}

.desc-container .images image {
  width: 98px;
  margin-bottom: 12px;
  height: 136px;
}

.bottom {
  position: fixed;

  bottom: 35px;
  width: 100vw;
}

.wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
}

.block {
  position: relative;

  width: 279px;
  height: 266px;
  border-radius: 16px;
  background-color: #fff;
  text-align: center;
}
.head {
  padding-top: 44px;
}

.head .icon {
  height: 48px;
  width: 48px;
}

.head .title {
  padding-top: 8px;
  font-size: 16px;
  font-weight: bold;
}
.progress {
  padding-top: 28px;
}
.progress-bar {
  background: #e5e6eb;
  border-radius: 22px;
  width: 181px;
  height: 4px;
  margin: 0 auto;
}

.progress-bar .active {
  transition: 0.2s;
  width: 80%;
  background: #424bff;
  border-radius: 22px;
  height: 100%;
}

.tip {
  padding-top: 9px;
  font-size: 14px;
  text-align: center;
  color: #4e5969;
}

.tip .blue {
  color: #424bff;
  font-weight: bold;
}
.reset-footer {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  transition: 0.3s;
  bottom: 20px;
}

.footer {
  position: absolute;
  bottom: 0;
  width: 100%;
  text-align: center;

  /* Fill/6-强调、图标、特殊场景 */

  color: #4e5969;
  align-items: center;
  height: 55px;
  line-height: 55px;
  border-top: 1px solid #e5e6eb;
  font-weight: 400;
  font-size: 16px;
}
