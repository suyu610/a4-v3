/* pages/upload-book/upload-book.wxss */
.desc-container {
  width: 80vw;
  margin: 10px auto;
  padding: 13px 18px;
  box-shadow: 1px 1px 6px #0000001c;
  background-color: #fff;
  border-radius: 12px;
  color: rgba(29, 29, 31, 1);

}
.desc-container .title {
  font-size: 16px;
  font-weight: bold;
}

.desc-container .body {
  padding: 15px 0;
  font-size: 13px;
}

.desc-container .images{
  display: flex;
  justify-content: space-between;
}

.desc-container .images image{
  width: 38vw;
}

.bottom{
  position:absolute;
  bottom: 49px;
  width: 100vw;
}